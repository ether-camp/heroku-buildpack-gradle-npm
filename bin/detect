#!/usr/bin/env bash
# bin/use <build-dir>

BACKEND_DIR=$1/backend
if [ -n "$BACKEND_SOURCE_DIR" ]; then
  IFS=';'; BACKEND_SOURCE_DIRS=($BACKEND_SOURCE_DIR); unset IFS;
  BACKEND_SOURCE_DIRS=( "${BACKEND_SOURCE_DIRS[@]/#/$1""/}" )
  # We will check only the first one
  BACKEND_DIR=${BACKEND_SOURCE_DIRS[0]}
fi
echo $BACKEND_DIR && exit 0

